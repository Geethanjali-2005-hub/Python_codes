class Solution:
    def addTwoNumbers(self, l1, l2):
        # Dummy node to simplify the result list construction
        dummy = ListNode(0)
        current = dummy
        carry = 0
        
        # Iterate while there are digits in either list or there's a carry
        while l1 or l2 or carry:
            # Get values from the lists, use 0 if the list is exhausted
            x = l1.val if l1 else 0
            y = l2.val if l2 else 0
            
            # Compute the sum and the new carry
            total = x + y + carry
            carry = total // 10  # Carry for the next digit
            digit = total % 10   # Current digit to store in the result
            
            # Create a new node with the computed digit
            current.next = ListNode(digit)
            current = current.next
            
            # Move to the next nodes in the input lists
            l1 = l1.next if l1 else None
            l2 = l2.next if l2 else None
        
        # Return the head of the result list (skip the dummy node)
        return dummy.next
