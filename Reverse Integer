class Solution(object):
    def reverse(self, x):
        """
        :type x: int
        :rtype: int
        """
        sign = 1 if x >= 0 else -1
        x = abs(x)
        reversed_x = 0

        while x > 0:
            digit = x % 10
            # Check for potential overflow before adding the digit
            if reversed_x > (2**31 - 1 - digit) // 10:
                return 0  # Overflow
            reversed_x = reversed_x * 10 + digit
            x //= 10

        # Apply the original sign
        result = sign * reversed_x

        # Check for final overflow after applying sign
        if not (-2**31 <= result <= 2**31 - 1):
            return 0

        return result
