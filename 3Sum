class Solution {
public:
    vector<vector<int>> threeSum(vector<int>& nums) {
        vector<vector<int>> result;
        if (nums.size() < 3) {
            return result; // Not enough elements to form a triplet
        }

        sort(nums.begin(), nums.end()); // Sort the array to efficiently handle duplicates and use two pointers

        for (int i = 0; i < nums.size() - 2; ++i) {
            // Skip duplicate elements for the first number of the triplet
            if (i > 0 && nums[i] == nums[i - 1]) {
                continue;
            }

            int left = i + 1;
            int right = nums.size() - 1;

            while (left < right) {
                int sum = nums[i] + nums[left] + nums[right];

                if (sum == 0) {
                    result.push_back({nums[i], nums[left], nums[right]});

                    // Skip duplicate elements for the second number
                    while (left < right && nums[left] == nums[left + 1]) {
                        left++;
                    }
                    // Skip duplicate elements for the third number
                    while (left < right && nums[right] == nums[right - 1]) {
                        right--;
                    }

                    left++;
                    right--;
                } else if (sum < 0) {
                    left++; // Increase sum by moving left pointer to a larger value
                } else { // sum > 0
                    right--; // Decrease sum by moving right pointer to a smaller value
                }
            }
        }
        return result;
    }
};
